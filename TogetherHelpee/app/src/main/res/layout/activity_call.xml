<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CallActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_guide"
        android:textSize="10pt"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="@string/guide"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도움 요청"
        android:textSize="15pt"
        android:textStyle="bold"
        android:paddingVertical="10pt"
        android:background="@drawable/button_border1"
        android:textColor="#000000"
        android:id="@+id/btn_call"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="15pt"
        android:textStyle="bold"
        android:paddingVertical="10pt"
        android:background="@drawable/button_border2"
        android:textColor="#000000"
        android:id="@+id/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_call"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:paddingVertical="100px"
        android:text="예시) 8월 17일 오전 2시에 삼성역까지 데려다 주세요"
        android:textSize="10pt"
        android:textColor="#5fe4ff"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_guide"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView2"
        android:textStyle="bold|italic"
        android:textSize="13pt"
        android:textColor="#ffe75f"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>