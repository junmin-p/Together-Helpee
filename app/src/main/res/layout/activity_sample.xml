<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/natural"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:background="@drawable/icon">

        </LinearLayout>



        <LinearLayout
            android:id="@+id/imageLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/natural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용 방법"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.025"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#99A1AC"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오늘 날짜 : 05월 29일"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.025"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="10dp"
                android:background="#99A1AC"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="도움 요청"
                    android:textSize="15dp"
                    android:letterSpacing="0.025"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:letterSpacing="0.025"
                        android:text="예시"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:letterSpacing="0.025"
                        android:text="8월 17일 오전 2시에 삼성역까지 데려다주세요"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#99A1AC"
                android:layout_marginTop="20dp"/>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">



                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="다음"
                    android:textSize="15dp"
                    android:letterSpacing="0.025"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설명"
                        android:letterSpacing="0.025"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="30dp"
                        android:textSize="14dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="도움 요청하신 내용이 같으면 눌러주세요"
                        android:layout_marginLeft="30dp"
                        android:letterSpacing="0.025"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#99A1AC"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.025"
        android:id="@+id/studentstart_user"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.025"
        android:id="@+id/studentstart_name"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_below="@+id/studentstart_user"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="log out"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/studentstart_logout"
        />



</RelativeLayout>